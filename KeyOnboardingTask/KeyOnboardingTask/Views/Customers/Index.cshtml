<h2>Customer Details</h2>

            <p>
                    @*<a href="Customers/Create" class="btn btn-primary">Add New Custmer</a>*@
                   <a id="btnCreate" href="#myModal" data-toggle="modal" class="btn btn-primary">Add New Customer</a>
                   @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">Add New Customer</button>*@
           </p>
                                    <table class="table">
                                        <tr>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.Name)*@
                                                Customer Name
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Address)
                                            </th>
                                            <th>
                                                Action(Edit)
                                            </th>
                                            <th>
                                                Action(Delete)
                                            </th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Address)
                                                </td>                                          
                                               <td> <a class="btnEdit btn btn-warning" data-id="@item.Id"><i class="glyphicon glyphicon-edit"> Edit</i></a></td>
                                                <td> <a class="btnDelete btn btn-danger" data-id="@item.Id"><i class="glyphicon glyphicon-trash"> Delete</i></a></td>

                                            </tr>
                                        }

                                    </table>
                             
                    
                    <div id="myModal" class="modal fade" role="dialog" tabindex="-1" aria-labelledby="myLargeModalLabel">
